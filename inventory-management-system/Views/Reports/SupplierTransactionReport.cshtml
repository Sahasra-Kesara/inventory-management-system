@model IEnumerable<inventory_management_system.Models.InventoryTransaction>

@{
    ViewData["Title"] = "Supplier Transaction Report";
}

<h1>Supplier Transaction Report</h1>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Transaction Date</th>
            <th>Item Name</th>
            <th>Transaction Type</th>
            <th>Quantity</th>
            <th>Supplier Name</th>
            <th>Supplier Contact</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var transaction in Model)
        {
            <tr>
                <td>@transaction.TransactionDate</td>
                <td>@transaction.Item.ItemName</td>
                <td>@transaction.TransactionType</td>
                <td>@transaction.Quantity</td>
                <td>@transaction.Supplier.SupplierName</td>
            </tr>
        }
    </tbody>
</table>

<a href="@Url.Action("Index")" class="btn btn-secondary">Back to Reports</a>
